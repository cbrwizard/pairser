<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => Site %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:domain) %></dt>
      <dd><pre class="prettyprint"><%= @site.domain %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name_selector) %></dt>
      <dd><pre class="prettyprint"><%= @site.name_selector %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:main_image_selector) %></dt>
      <dd><pre class="prettyprint"><%= @site.main_image_selector %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:images_selector) %></dt>
      <dd><pre class="prettyprint"><%= @site.images_selector %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:button_selector) %></dt>
      <dd><pre class="prettyprint"><%= @site.button_selector %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

